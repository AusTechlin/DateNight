<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DateNight.Views.MoviePage">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Image Source="main_movie.png" />
            
            <Border Stroke="Gray" StrokeThickness="1" Margin="0,50,0,30">
                <Entry x:Name="txtMovie" Placeholder="Enter Total Cost of the Movie" Keyboard="Numeric" />
            </Border>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>